snippet 'am-breadcrumb:slash' do |cmd| 
    cmd.trigger = 'am-breadcrumb:slash' 
    cmd.needApplyReContentAssist = true 
    cmd.expansion = '
      <ol class="am-breadcrumb am-breadcrumb-slash">
        <li><a href="#">${1:首页}</a></li>
        <li><a href="#">${2:分类}</a></li>
        <li class="am-active">${3:内容}</li>
      </ol>
      ' 
end 

